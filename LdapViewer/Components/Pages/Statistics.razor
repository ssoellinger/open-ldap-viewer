@page "/statistics"
@using System.Text.Json
@using LdapViewer.Models
@using LdapViewer.Services
@inject LdapService LdapService
@inject NavigationManager Navigation
@inject IJSRuntime JS
@rendermode InteractiveServer

<PageTitle>Open LDAP Viewer - Statistiken</PageTitle>

@if (_reconnecting)
{
    <div class="container mt-4 text-center">
        <span class="spinner-border me-2"></span> Verbindung wird wiederhergestellt...
    </div>
}
else if (!LdapService.IsConnected)
{
    <div class="container mt-4">
        <div class="alert alert-warning">
            Nicht verbunden. <a href="/">Zur Verbindungsseite</a>
        </div>
    </div>
}
else
{
    <div class="container-fluid mt-3 px-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4 class="mb-0">Verzeichnis-Statistiken</h4>
            <button class="btn btn-primary" @onclick="LoadStatistics" disabled="@_loading">
                @if (_loading)
                {
                    <span class="spinner-border spinner-border-sm me-1"></span>
                }
                @(_objectClassStats == null ? "Statistiken laden" : "Aktualisieren")
            </button>
        </div>

        @if (!string.IsNullOrEmpty(_error))
        {
            <div class="alert alert-danger">@_error</div>
        }

        @if (_objectClassStats != null)
        {
            <div class="row">
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body text-center">
                            <h2 class="mb-0">@_totalEntries</h2>
                            <small class="text-muted">Eintraege gesamt</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body text-center">
                            <h2 class="mb-0">@_objectClassStats.Count</h2>
                            <small class="text-muted">ObjectClasses</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body text-center">
                            <h2 class="mb-0">@(_ouStats?.Count ?? 0)</h2>
                            <small class="text-muted">Organisationseinheiten</small>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">Nach ObjectClass</h5>
                        </div>
                        <div class="card-body" style="max-height: 500px; overflow-y: auto;">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>ObjectClass</th>
                                        <th style="width: 100px">Anzahl</th>
                                        <th style="width: 40%">Verteilung</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in _objectClassStats.OrderByDescending(x => x.Value))
                                    {
                                        var pct = _totalEntries > 0 ? (double)item.Value / _maxObjectClassCount * 100 : 0;
                                        <tr>
                                            <td class="font-monospace small">@item.Key</td>
                                            <td>@item.Value</td>
                                            <td>
                                                <div class="progress" style="height: 18px;">
                                                    <div class="progress-bar bg-primary" style="width: @pct.ToString("F1", System.Globalization.CultureInfo.InvariantCulture)%">
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 mb-3">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">Nach Organisationseinheit (OU)</h5>
                        </div>
                        <div class="card-body" style="max-height: 500px; overflow-y: auto;">
                            @if (_ouStats != null && _ouStats.Count > 0)
                            {
                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th>OU</th>
                                            <th style="width: 100px">Anzahl</th>
                                            <th style="width: 40%">Verteilung</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in _ouStats.OrderByDescending(x => x.Value))
                                        {
                                            var pct = _maxOuCount > 0 ? (double)item.Value / _maxOuCount * 100 : 0;
                                            <tr>
                                                <td class="font-monospace small">@item.Key</td>
                                                <td>@item.Value</td>
                                                <td>
                                                    <div class="progress" style="height: 18px;">
                                                        <div class="progress-bar bg-success" style="width: @pct.ToString("F1", System.Globalization.CultureInfo.InvariantCulture)%">
                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                            else
                            {
                                <p class="text-muted">Keine OUs gefunden.</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
        else if (!_loading)
        {
            <div class="text-muted">
                Klicken Sie auf "Statistiken laden" um die Verzeichnis-Statistiken zu berechnen.
            </div>
        }
    </div>
}

@code {
    private Dictionary<string, int>? _objectClassStats;
    private Dictionary<string, int>? _ouStats;
    private int _totalEntries;
    private int _maxObjectClassCount;
    private int _maxOuCount;
    private bool _loading;
    private bool _reconnecting;
    private string? _error;

    protected override async Task OnInitializedAsync()
    {
        if (LdapService.IsConnected)
        {
            await LoadStatistics();
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !LdapService.IsConnected)
        {
            await TryReconnect();

            if (LdapService.IsConnected)
            {
                await LoadStatistics();
            }

            StateHasChanged();
        }
    }

    private async Task TryReconnect()
    {
        try
        {
            var json = await JS.InvokeAsync<string>("connectionStorage.loadLastConnection");
            if (string.IsNullOrEmpty(json)) return;

            var settings = JsonSerializer.Deserialize<LdapConnectionSettings>(json);
            if (settings == null) return;

            _reconnecting = true;
            StateHasChanged();

            await Task.Run(() => LdapService.Connect(settings));
        }
        catch
        {
            // Reconnect failed
        }
        finally
        {
            _reconnecting = false;
        }
    }

    private async Task LoadStatistics()
    {
        _loading = true;
        _error = null;

        try
        {
            var baseDn = LdapService.Settings!.BaseDn;

            _objectClassStats = await LdapService.GetStatistics(baseDn);
            _ouStats = await LdapService.GetOuStatistics(baseDn);

            _totalEntries = _objectClassStats.GetValueOrDefault("top",
                _objectClassStats.Values.DefaultIfEmpty(0).Max());
            _maxObjectClassCount = _objectClassStats.Values.DefaultIfEmpty(1).Max();
            _maxOuCount = _ouStats.Values.DefaultIfEmpty(1).Max();
        }
        catch (Exception ex)
        {
            _error = $"Fehler beim Laden der Statistiken: {ex.Message}";
        }
        finally
        {
            _loading = false;
        }
    }
}
